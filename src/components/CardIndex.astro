---
interface Props {
    title: string;
    description: string;
    articleClasses: string;
    link?: string;
}

const { description, title, articleClasses, link } = Astro.props;
---

<a
    href={link}
    class=`bg-white shadow-lg border-2 ${articleClasses} p-5 rounded-lg min-h-56  hover:scale-105 transition-all hover:cursor-pointer`
>
    <slot />
    <h1 class={`text-3xl mt-5 text-center font-semibold`}>
        {title}
    </h1>
    <p class="text-center mt-2 font-normal text-sm">
        {description}
    </p>
</a>
